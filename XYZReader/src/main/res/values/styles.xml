<resources>

    <!-- Themes -->
    <style name="Theme.Bacon" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main theme colors -->
        <!-- App branding Color for the app bar -->
        <item name="colorPrimary">@color/theme_primary</item>
        <!-- darker variant for the status bar and contextual app bar -->
        <item name="colorPrimaryDark">@color/theme_primary_dark </item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/theme_accent</item>
    </style>

    <style name="Theme.Bacon.Detail" parent="Theme.AppCompat"/>

    <!-- Material text styles -->
    <style name="material_text_title">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="material_text_subheading">
        <item name="android:textSize">@dimen/subheading_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="material_text_body">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>
